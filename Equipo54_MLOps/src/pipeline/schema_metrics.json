{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline evaluation metrics",
  "type": "object",
  "properties": {
    "accuracy": {"type": ["number", "null"]},
    "precision_macro": {"type": ["number", "null"]},
    "recall_macro": {"type": ["number", "null"]},
    "f1_macro": {"type": ["number", "null"]},
    "support_per_class": {"type": "object", "additionalProperties": {"type": "integer"}},
    "timestamp": {"type": "string", "format": "date-time"},
    "notes": {"type": ["string", "null"]}
  },
  "required": ["accuracy", "f1_macro", "timestamp"]
}
